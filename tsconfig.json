{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowArbitraryExtensions": true,
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"declaration": true,
		"baseUrl": "./src",
		"types": [
			"react",
			"react-dom",
			"vitest/importMeta",
			"vitest/jsdom",
			"vitest/globals",
			"storybook",
			"@testing-library/jest-dom"
		]
	},
	"include": ["./src/**/*"],
	"exclude": ["**/__tests__/**", "dist", "./node_modules"]
}
